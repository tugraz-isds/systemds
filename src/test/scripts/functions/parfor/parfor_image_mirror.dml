# input data taken from deep learning examples
# Format: <label>,pixel_1,pixel2,pixel_3,etc
#         28x28 grayscale
# Download: curl -O https://pjreddie.com/media/files/mnist_test.csv

data = read($in_file, format="csv")
num_images=ifdef($num_images , nrow(data))

num_cols = ncol(data)
images = data[1:num_images,2:num_cols]
labels = data[1:num_images,1]

augmented_images = matrix(0, rows=2*num_images, cols=num_cols)

parfor (idx in 0:(num_images-1), check = 0) {
    i = idx + 1
    augmented_images[idx*2+1,1] = labels[i]
    augmented_images[idx*2+2,1] = labels[i]
    image2d = matrix(images[i,], $height, $width)

    x_flip = image_mirror(image2d, TRUE)
    augmented_images[idx*2+1,2:num_cols] = matrix(x_flip, 1, $width * $height)

    y_flip = image_mirror(image2d, FALSE)
    augmented_images[idx*2+2,2:num_cols] = matrix(y_flip, 1, $width * $height)
}

write(augmented_images, $out_file, format="csv")
