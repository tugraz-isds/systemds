# How to invoke this dml script LineageTrace.dml?
# Assume LR_HOME is set to the home of the dml script
# Assume rows = 20 and cols = 20 for X
# hadoop jar SystemDS.jar -f $LR_HOME/LineageTrace.dml -args "$INPUT_DIR/X" "$OUTPUT_DIR/X"

X = read($1);

R = X;
for(i in 1:6){

  if(i %% 2 == 1)
    R = R + 1 / 2;
  else
    R = t(R) %*% R;

  R = R * 3;

  for(j in 1:8){
    R = R + 11

    if (j %% 4 == 0)
      R = R / 5

    for(k in 1:10){
      R = R + 99
      if (k %% 4 == 0)
        R = R * 2
    }
  }

  if (i %% 2 == 0)
    R = t(R) %*% R;

  for(k in 1:3){
    for(k in 1:7){
      R = t(R) %*% R;
    }
  }
}

R = R * 3;

write(R, $2, format="text");
