# Increase rows and cols for better performance gains

funcadd = function(Matrix[Double] X) return (Matrix[Double] addX) 
{
  addX = X + 1;
  while(FALSE){}
}

functsmm = function(Matrix[Double] X) return (Matrix[Double] tsmmX) 
{
  X = funcadd(X);
  tsmmX = t(X) %*% X;
  while(FALSE){}
}

r = 100
c = 1

X = rand(rows=r, cols=c, seed=42);
R = matrix(0, 1, 2);

tsmmX = functsmm(X);
R[,1] = tsmmX;

tsmmX = functsmm(X);
R[,2] = tsmmX;

write(R, $1, format="text");
