X = rand(rows=$3, cols=$4, seed=7);

R = matrix(0, nrow(X), ncol(X));
parfor(i in 1:ncol(X)) {
  Xi = X[,i];
  Xi = Xi + Xi - 2 * sqrt(Xi) + Xi * Xi;
  R[,i] = rowSums(Xi)+colSums(Xi);
}

print(lineage(R));
write(R, $2);
